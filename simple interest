#include<stdio.h>
int main()
{
    float P,R,T,Si;
    printf("Enter the Principal Amount");
    scanf("%f",&P);
    
    printf("Enter the Rate of Interest");
    scanf("%f",&R);
    
    printf("Enter the time period");
    scanf("%f",&T);
    
    Si=(P*R*T)/100;
    printf("The Simple Interest is %f",Si);
    return 0;

}
